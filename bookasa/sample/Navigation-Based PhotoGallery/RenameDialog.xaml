<Window x:Class="PhotoGallery.RenameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Rename Photo" Height="150" Width="300" ResizeMode="CanResize">
    <Grid Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Label>Choose a new name:</Label>
      <TextBox Grid.Row="1" x:Name="textBox" TextChanged="textBox_TextChanged"/>
      <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Margin="0,0,5,0" Click="okButton_Click">OK</Button>
        <Button IsCancel="True">Cancel</Button>
      </StackPanel>
    </Grid>
</Window>